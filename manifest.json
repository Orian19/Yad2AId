{
  "manifest_version": 3,
  "name": "Yad2Aid",
  "version": "1.0",
  "description": "Redirects to Chrome Extension of Yad2Aid",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "https://www.yad2.co.il/realestate/*"
  ],
  "background": {
    "service_worker": "frontend/extension/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.yad2.co.il/realestate/*"],
      "js": ["frontend/extension/content-script-loader.js"],
      "css": ["frontend/extension/styles.output.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "frontend/extension/content.js",
        "frontend/extension/sendRequest.js",
        "frontend/extension/buttons.js",
        "frontend/extension/drawer.js",
        "frontend/extension/swipe.js",
        "frontend/extension/content-script-loader.js",
        "frontend/extension/drawerFormat.js",
        "frontend/extension/exit.js",
        "frontend/extension/logIn.js",
        "frontend/extension/form.js",
        "frontend/extension/sendLogIn.js",
        "frontend/extension/likedApts.js",
        "frontend/extension/fetchLikedApts.js",
        "frontend/extension/sendDeleteRequest.js",
        "frontend/extension/fetchDislikedApts.js",
        "frontend/extension/dislikedApts.js"


      ],
      "matches": ["https://www.yad2.co.il/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; connect-src http://127.0.0.1:8000;"    
  }
}
