{
  "manifest_version": 3,
  "name": "Yad2Aid",
  "version": "1.0",
  "description": "Redirects to Chrome Extension of Yad2Aid",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "https://www.yad2.co.il/realestate/*"
  ],
  "background": {
    "service_worker": "extension/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.yad2.co.il/realestate/*"],
      "js": ["extension/content-script-loader.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "extension/content.js",
        "extension/sendRequest.js",
        "extension/buttons.js",
        "extension/popUpForm.js",
        "extension/swipe.js"
      ],
      "matches": ["https://www.yad2.co.il/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://127.0.0.1:8000;"
  }
}
